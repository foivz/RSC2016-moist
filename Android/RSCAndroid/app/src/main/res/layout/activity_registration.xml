<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/activity_user_details"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimaryDark"
        tools:context="foi.hr.rscandroid.ui.registration.RegistrationActivity">

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:textColor="@android:color/white"
            android:textSize="22sp"
            android:layout_alignParentTop="true"
            android:gravity="center"
            android:id="@+id/tv_moar_info"
            android:text="We need moar info"
            />

    <com.rengwuxian.materialedittext.MaterialEditText
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:hint="Nickname"
            android:textColorHint="@android:color/white"
            android:layout_centerInParent="true"
            app:met_baseColor="@android:color/white"
            app:met_primaryColor="@android:color/white"
            app:met_floatingLabel="highlight"
            />

    <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/registration_button_border"
            android:textColor="@android:color/white"
            android:layout_alignParentBottom="true"
            android:layout_margin="@dimen/default_spacing"
            android:text="Next"
            />


</RelativeLayout>
