<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@color/tab_upcoming"
            app:titleTextColor="@android:color/white"/>

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <com.google.android.gms.maps.MapView
                    android:id="@+id/mapView"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    app:cameraZoom="15"
                    app:mapType="normal"
                    app:uiCompass="false"
                    app:uiScrollGestures="false"
                    app:uiZoomControls="false"
                    app:uiZoomGestures="false"/>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp"
                    android:orientation="vertical">

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Start"
                        android:textStyle="bold"/>

                <TextView
                        android:id="@+id/startTime"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:maxLines="1"
                        android:ellipsize="end"
                        tools:text="28.11.2016 10:00"/>

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:text="Description"
                        android:textStyle="bold"/>

                <TextView
                        android:id="@+id/description"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        tools:text="Opis Opisdjnlas jdas dnkasd jnasdn asdas dasn dkasdkl nadaskn dasdm asdn asdasklnd asdnkl asd aslnd asdnkas dasnlkd asnkld asd klasd nlkasd asnlkd asd nlkasd anklsd asnkd asd lkas dlknas dknal"/>

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:text="Prizes"
                        android:textStyle="bold"/>

                <TextView
                        android:id="@+id/prizes"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        tools:text="Opis Opisdjnlas jdas dnkasd jnasdn aklasd nlkasd asnlkd asd nlkasd anklsd asnkd asd lkas dlknas dknal"/>

                <Button
                        android:id="@+id/action"
                        android:layout_width="match_parent"
                        android:layout_height="72dp"
                        android:layout_marginTop="44dp"
                        android:textColor="@android:color/white"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        tools:text="Start quiz!"/>

            </LinearLayout>

            <LinearLayout
                    android:id="@+id/teams_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/default_spacing"
                        android:layout_marginTop="@dimen/default_spacing"
                        android:layout_gravity="center"
                        android:text="Pick your team"
                        />

                <android.support.v7.widget.RecyclerView
                        android:id="@+id/rv_teams"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/default_spacing"/>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>