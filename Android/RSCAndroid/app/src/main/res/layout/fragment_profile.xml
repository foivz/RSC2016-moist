<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

    <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/iv_avatar"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="30dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/ic_app"
            app:civ_border_color="#009688"
            app:civ_border_width="0dp"/>

    <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_avatar"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:textColor="@color/primaryText"
            android:textSize="22sp"
            android:text="Stefano Kliba"
            />

    <RelativeLayout
            android:id="@+id/name_container"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_below="@+id/tv_name"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="@dimen/default_spacing"
            android:layout_marginRight="@dimen/default_spacing"
            android:gravity="center_vertical"
            android:orientation="horizontal">

        <TextView
                android:id="@+id/tv_nickname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginRight="15dp"
                android:textColor="@color/primaryText"
                android:textSize="18sp"
                android:visibility="visible"
                android:text="Nickname:"
                />

        <TextView
                android:id="@+id/tv_nickname_data"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/tv_nickname"
                android:textSize="18sp"
                android:textColor="@color/primaryText"

                android:visibility="visible"
                android:text="Noxqs"
                />

        <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/et_nickname_data"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/tv_nickname"
                android:layout_alignParentStart="true"
                android:layout_marginTop="@dimen/default_spacing"
                android:hint="Nickname"
                android:textSize="18sp"
                android:text="Noxqs"
                android:visibility="gone"
                android:textColorHint="@color/colorAccentDarker"
                app:met_floatingLabelTextSize="16sp"
                app:met_textColorHint="@color/colorAccentDarker"
                app:met_baseColor="@color/colorAccent"
                app:met_primaryColor="@color/colorAccent"
                app:met_hideUnderline="true"
                app:met_floatingLabel="highlight"
                app:met_errorColor="@color/registrationErrorColor"
                />

        <ImageView
                android:id="@+id/iv_edit"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignParentEnd="true"
                android:src="@drawable/ic_mode_edit_black_24dp"
                />

        <LinearLayout
                android:id="@+id/confirmation_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="@dimen/default_spacing"
                android:visibility="gone">

            <ImageView
                    android:id="@+id/btn_accept"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginRight="16dp"
                    android:src="@drawable/ic_confirm"
                    />

            <ImageView
                    android:id="@+id/btn_decline"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_canceled"
                    />

        </LinearLayout>

    </RelativeLayout>

    <LinearLayout
            android:id="@+id/email_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/name_container"
            android:layout_marginLeft="@dimen/default_spacing"
            android:orientation="horizontal">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/default_spacing"
                android:layout_marginRight="15dp"
                android:textSize="18sp"
                android:textColor="@color/primaryText"
                android:text="Email:"
                />

        <TextView
                android:id="@+id/tv_email_data"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/default_spacing"
                android:textSize="18sp"
                android:textColor="@color/primaryText"
                android:text="kliba.stefano@gmail.com"
                />
    </LinearLayout>

    <Button
            android:id="@+id/btn_view_teams"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_margin="@dimen/default_spacing"
            android:background="@color/colorAccent"
            android:text="View my teams"
            android:textColor="@android:color/white"
            />

</RelativeLayout>